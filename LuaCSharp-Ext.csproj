<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<RootNamespace>LuaExt</RootNamespace>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageId>LuaCSharp-Ext</PackageId>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<Version>0.1.0</Version>
		<Authors>JagYayu</Authors>
		<Description>Utility extensions for Lua-CSharp interop in C#.</Description>
		<RepositoryUrl>https://github.com/jagyayu/LuaCSharp-Ext</RepositoryUrl>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="LuaCSharp" Version="0.4.2" />
		<None Include="README.md" Pack="true" PackagePath="\" />
	</ItemGroup>
</Project>